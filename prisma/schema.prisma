generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 24. óra: Prisma modell definíció
model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Float
  category  String
  date      DateTime @default(now())
  note      String?
  createdAt DateTime @default(now())
}
